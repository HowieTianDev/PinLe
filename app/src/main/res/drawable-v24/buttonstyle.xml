<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@android:color/transparent"/>       //填充的颜色
            <corners android:radius="20dp"></corners>//边角弧度
            <stroke android:color="#FFF" android:width="2dp"/>  //边框设置 color：边框颜色 ， width：边框厚度
        </shape>
    </item>
    <item android:state_pressed="true">         //同理，该处是设置点击状态时的样式
        <shape>
            <solid android:color="@color/clr_pressed"/>
            <corners android:radius="250dp"></corners>
            <stroke android:color="#FFF" android:width="2dp"/>
        </shape>
    </item>

</selector>



